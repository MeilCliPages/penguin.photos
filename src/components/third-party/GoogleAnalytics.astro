---
interface Props {
    id: string;
}

const { id } = Astro.props;
---

{import.meta.env.PROD && <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${id}`} />}
{import.meta.env.PROD && <script is:inline define:vars={{ id: id }}>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
        dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", id);
</script>}